}

void fragment() {
	vec2 st = FRAGCOORD.xy/u_resolution;
	float y = st.x;
	
	vec3 color = vec3(st.x * st.y);
	
	// Plot a line
    float pct = plot(st);
    color = (1.0-pct)*color+pct*vec3(0.0,1.0,0.0);

	COLOR = vec4(color,1.0);
	
}"

